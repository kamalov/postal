{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "postal",
	"scopeName": "source.post",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#operators"
		},
		{
			"include": "#strings"
		},
        {
            "name": "comment.line.postal",
            "match": "//.*$"
        }	
    ],
	"repository": {
		"keywords": {
			"patterns": [
                {
				    "name": "keyword.control.postal",
				    "match": "#|\\b(#|if|then|else|loop|for|return|sub|function|do|end|item|index|record|external|integer|real|string|and|or|not|xor|shl|shr|div|mod|continue|break|yes|no)\\b"
			    },
                {
				    "name": "keyword.control.postal1",
				    "match": "\\b(#)\\b"
			    },
                {
                    "name": "keyword.control.postal.iterator",   
                    "match": "\\>\\>"
                }
            ]
		},
		"operators": {
			"patterns": [{
				"name": "operator.postal",
				"match_backup": "[>,.=;:\\+\\-\\/\\*\\[\\]]",
				"match": "\\b(and|or|not|div|mod)\\b"
			}]
		},
        "strings": {
            "name": "string.quoted.single.postal",
            "begin": "\\'",
            "end": "\\'",
            "patterns": [
                {
                    "name": "constant.character.escape.postal",
                    "match": "\\\\."
                }
            ]
        }             	
    }
}