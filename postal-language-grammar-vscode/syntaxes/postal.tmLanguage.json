{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "postal",
	"scopeName": "source.post",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#operators"
		},
		{
			"include": "#strings"
		},
        {
            "name": "comment.line.postal",
            "match": "//.*$"
        }	
    ],
	"repository": {
		"keywords": {
			"patterns": [{
				"name": "keyword.control.postal",
				"match": "\\b(if|else|loop|while|for|return|ret|fn|do|begin|end|it|idx|rec|external|int|real|str)\\b"
			}]
		},
		"operators": {
			"patterns": [{
				"name": "operator.postal",
				"match_backup": "[<>,.=;:\\+\\-\\/\\*\\[\\]]",
				"match": "\\b(=|and|or|not|div|mod)\\b"
			}]
		},
        "strings": {
            "name": "string.quoted.single.postal",
            "begin": "\\'",
            "end": "\\'",
            "patterns": [
                {
                    "name": "constant.character.escape.postal",
                    "match": "\\\\."
                }
            ]
        }             	
    }
}