    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'ppt'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=postal",
                    "--package=postal"
                ],
                "filter": {
                    "name": "postal",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}",
            "presentation": {
                "reveal": "silent",
                "revealProblems": "onProblem",
                "clear": true,
                "close": true
            }
        }
    ]
}